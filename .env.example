# AIMADDS M&A Due Diligence Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# API KEYS - Required
# ============================================================================

# OpenAI API Key (GPT-4 for synthesis and strategic analysis)
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic API Key (Claude for legal and risk analysis)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Google AI API Key (Gemini for financial deep dive)
GOOGLE_AI_API_KEY=your-google-ai-key-here

# xAI API Key (Grok for market sentiment analysis)
XAI_API_KEY=xai-your-xai-key-here

# Financial Modeling Prep API Key (financial data)
FMP_API_KEY=your-fmp-api-key-here

# SEC EDGAR User Agent (required format: "CompanyName AdminContact@email.com")
SEC_USER_AGENT="YourCompany admin@yourcompany.com"

# ============================================================================
# CLOUD DEPLOYMENT OPTIMIZATION SETTINGS
# ============================================================================

# SEC Document Fetching Control
# Set to 'false' in cloud to avoid timeouts (10-15 min per document)
# Set to 'true' locally if you want full SEC analysis
ENABLE_SEC_DOCUMENTS=false

# SEC API Timeout (seconds)
# How long to wait for SEC API calls before timing out
SEC_FETCH_TIMEOUT=120

# Worker Configuration
# Maximum concurrent agent workers
MAX_WORKERS=4

# Worker timeout (seconds) - increase for cloud environments
WORKER_TIMEOUT=3600

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL Database URL
# Format: postgresql://user:password@host:port/database
# For local: postgresql://postgres:password@localhost:5432/aimadds
# For cloud: Use Cloud SQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/aimadds

# For Google Cloud SQL (alternative to DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aimadds
DB_USER=postgres
DB_PASSWORD=your-db-password

# ============================================================================
# SECURITY
# ============================================================================

# JWT Secret Key for authentication (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your-secret-key-here-use-openssl-rand-hex-32

# JWT Expiration (hours)
JWT_EXPIRATION_HOURS=24

# ADMIN Configuration
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=change-this-secure-password

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug Mode (true/false)
DEBUG=false

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,https://yourdomain.com

# Backend URL (for frontend API calls)
BACKEND_URL=http://localhost:8000

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173

# ============================================================================
# GOOGLE CLOUD SETTINGS (for production deployment)
# ============================================================================

# Google Cloud Project ID
GCP_PROJECT_ID=your-gcp-project-id

# Google Cloud Region
GCP_REGION=us-central1

# Cloud Run Service Name
CLOUD_RUN_SERVICE=aimadds-backend

# Cloud Storage Bucket for reports
GCS_BUCKET_NAME=aimadds-reports

# ============================================================================
# LOGGING
# ============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log to file (true/false)
LOG_TO_FILE=true

# Log file path
LOG_FILE_PATH=logs/application.log

# ============================================================================
# MONITORING & PERFORMANCE
# ============================================================================

# Enable performance monitoring (true/false)
ENABLE_MONITORING=true

# Enable anomaly detection (true/false)
ENABLE_ANOMALY_DETECTION=true

# ============================================================================
# RATE LIMITING
# ============================================================================

# API rate limit (requests per minute)
RATE_LIMIT_PER_MINUTE=100

# ============================================================================
# WEBSOCKET SETTINGS
# ============================================================================

# WebSocket ping interval (seconds)
WEBSOCKET_PING_INTERVAL=30

# WebSocket ping timeout (seconds)
WEBSOCKET_PING_TIMEOUT=10

# ============================================================================
# DEVELOPMENT SETTINGS (local only)
# ============================================================================

# Hot reload for development (true/false)
HOT_RELOAD=true

# Use mock data for testing (true/false)
USE_MOCK_DATA=false
